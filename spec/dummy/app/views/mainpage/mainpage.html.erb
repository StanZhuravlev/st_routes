<h1>Главная страница</h1>

<h2>Категории</h2>

<ul>
<% @categories.each do |one| %>
    <li>
      <%= one.category.title + " (#{one.category.pages_count})" %>&nbsp;<%= link_to(one.full_url, one.full_url) %>
    </li>
<% end %>
</ul>
<br>

<h2>Страницы</h2>

<ul>
  <% @pages.each do |url, page| %>
  <li>
    <%= page.title %>&nbsp;<%= link_to(url, url) %>
  </li>
  <% end %>
</ul>

